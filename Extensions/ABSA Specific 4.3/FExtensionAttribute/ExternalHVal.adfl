  "Void"->0.0, 
  default->select(object.AdditionalInfo.ExternalVal, 
    nil->double(ExternalVal) * (instrument:currency :* "fxSpotRate" [fxToCurrency = currencyZAR]), 
    default->double(object.AdditionalInfo.ExternalVal) * (instrument:currency :* "fxSpotRate" [fxToCurrency = currencyZAR]))));
