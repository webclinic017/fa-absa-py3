[Core Pricing]FFuture:leverage = double(underlyingValue) / double(theoreticalOrMarketInstrumentValue);
[Core Pricing]FInstrument:leverage = nil;
[Core Pricing]FOption:leverage = (double(2 * underlyingValue) - double(strikeValue)) / double(theoreticalOrMarketInstrumentValue);
[Core Pricing]FOrderBook:leverage = instrument :* "leverage" [priceSource];
[Core Pricing]FPriceAggregate:leverage = instrument :* "leverage" [priceSource];