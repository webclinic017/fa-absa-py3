[Core Pricing]FInstrumentAndTrades:fxDisplayToInstrument = switch(displayCurrency == (instrument:currency), 
  true->1.0, 
  default->displayCurrency :* "immediateOrSpotFxRate" [fxToCurrency = (instrument:currency)]);
[Core Pricing]FMultiInstrumentAndTrades:fxDisplayToInstrument = select(portfolio:currency, 
  nil->nil, 
  default->switch(displayCurrency == (portfolio:currency), 
    true->1.0, 
    default->displayCurrency :* "immediateOrSpotFxRate" [fxToCurrency = (portfolio:currency)]));