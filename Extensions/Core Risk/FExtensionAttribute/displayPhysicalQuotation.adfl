[Core Risk]FInstrument:displayPhysicalQuotation = quotation;
[Core Risk]FInstrumentAndTrades:displayPhysicalQuotation = instrument:displayPhysicalQuotation;
[Core Risk]FMultiInstrumentAndTrades:displayPhysicalQuotation = shunt(1 == count(priceCurvesInTheoreticalValue), 
  true->priceCurvesInTheoreticalValue.Quotation, 
  false->shunt(nil == commonBaseCurve(priceCurvesInTheoreticalValue, true), 
    true->nil, 
    false->commonBaseCurve(priceCurvesInTheoreticalValue, true).Quotation));
[Core Risk]FSingleInstrumentAndTrades:displayPhysicalQuotation = select(isCommodityIndexDerivative, 
  true->select(instrumentGroupingReference, 
    nil->select(commodityGroupingReferenceInstrument, 
      nil->commodityIndexReference, 
      default->commodityGroupingReferenceInstrument), 
    default->instrumentGroupingReference), 
  false->instrument).Quotation;