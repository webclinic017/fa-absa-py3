[Core Risk]FInstrument:volgaInstrument = select(isSettled or noVolatilityGreekRiskFactorsExist, 
  true->instrumentSpotDateZero, 
  false->volgaValuesInstrument);
[Core Risk]FInstrumentAndTrades:volgaInstrument = openInstrumentOrInstrument :* "collapse(volgaInstrument)" [isSplitAllGrouped, priceSource] * combinationInstrumentMapFactor;
[Core Risk]FMultiInstrumentAndTrades:volgaInstrument = nil;
[Core Risk]FPriceAggregate:volgaInstrument = instrument :* "adjustForSpotHandling(volgaInstrument, true)" [priceSource];
[Core Risk]FTradeRow:volgaInstrument = instrument:volgaInstrument [isSplitAllGrouped, priceSource, currency = tradeRowCurrency] * combinationInstrumentMapFactor;