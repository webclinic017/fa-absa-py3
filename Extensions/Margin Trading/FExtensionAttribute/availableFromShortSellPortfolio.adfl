[Margin Trading]FMultiInstrumentAndTrades:availableFromShortSellPortfolio = nil;
[Margin Trading]FSingleInstrumentAndTrades:availableFromShortSellPortfolio = switch((portfolio:shortSellLimitPortfolio <> nil) and not portfolio:isShortSellLimitPortfolio, 
  true->portfolio:shortSellLimitPortfolio :* "availableToSell" [instrument, positionObject], 
  default->0);