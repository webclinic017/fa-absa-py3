[Fixed Income Pricing and Risk]FInstrument:convexityCalculation = shunt(implyValid, 
  false->object:convexityFromYield [yieldValue = theoreticalYieldToMaturity], 
  true->object:convexityFromYield [yieldValue = marketYieldToMaturity]);
[Fixed Income Pricing and Risk]FOption:convexityCalculation = double(priceDeltaInstrumentBasedOnPriceType) * underlying:convexityCalculation;