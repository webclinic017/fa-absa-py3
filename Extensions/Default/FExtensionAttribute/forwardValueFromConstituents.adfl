[Default]FCombInstrMap:forwardValueFromConstituents = switch(instrument:isSettled, 
  true->combinationForwardZero, 
  false->valuationInstrument :* "forwardValueFromConstituents" [priceSource, doSplitAll, forwardPriceDate = forwardPriceDateCalculated, forwardValueDate] * timeDistributionFactor * weight * contractSize);
[Default]FCombination:forwardValueFromConstituents = sumOf(instrumentMapsForForwardValueCalculations :* "forwardValueFromConstituents" [priceSource, doSplitAll, forwardValueDate]) / combinationDivisionFactor;
[Default]FInstrument:forwardValueFromConstituents = collapse(forwardValueNoDividends);