[Default]FCombination:referenceInstrumentForVolatility = select(instrumentMapsWithVolatility, 
  nil->nil, 
  default->select(count(instrumentMapsWithVolatility) == 1, 
    true->instrumentMapsWithVolatility[0], 
    false->nil));
[Default]FInstrument:referenceInstrumentForVolatility = instrument;
