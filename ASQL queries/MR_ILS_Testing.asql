Select
    ael_i(p,'ASQL_log','MR_ILS_Testing') 'Name' 
Into
    ASQL_LOG_TEMP 
From     TextObject p 
Where    p.name = 'MR_ILS' and p.type = 'SQL Query' 



Select
    'Create File' 'Process', 
    ael_s(,'MR_ILS.OpenFile',@1_path{'f:\'},@2_FileName{'MR_Inflation_Linked_Swap.csv'},@3_PositionName{'MR_Inflation_Linked_Swap_Position.csv'})	'BuildConfirmation'
into
    Macro
from
	serverdata s
where
	s.srdnbr > 0


Select
    'Write File' 'Process', 
    ael_s(i,'MR_ILS.Write',@1_path{'f:\'},@2_FileName{'MR_Inflation_Linked_Swap.csv'},@3_PositionName{'MR_Inflation_Linked_Swap_Position.csv'})	'BuildConfirmation'
Into
    Macro
From 
	Instrument i
Where 
	(i.exp_day = 0 or i.exp_day > Today)
And i.instype in ('IndexLinkedSwap') 


Select
    'Close File'    'Process', 
    'Successful'	'BuildConfirmation'
Into
    Macro
From
	serverdata s
Where
	s.srdnbr > 0



Select * From Macro
Where Process In ('Create File','Close File')