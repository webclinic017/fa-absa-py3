/* ******************  ASQL USAGE LOG  ********************** */ 
 select 
      ael_i(p,'ASQL_log','CAP MARKET Liq Asset Valuation') 'Name' 
 into  ASQL_LOG_TEMP 
 from TextObject p 
 where p.name = 'CAP MARKET Liq Asset Valuation' and p.type = 'SQL Query' 
 
  
/*positions*/

select
    t.trdnbr ,
    @Calc_Day{Today}	'Calc_Day',
    display_id(t,'prfnbr') 'Portfolio',
    i.insaddr,
    i.instype,
    i.insid,
    add_info(t,'MM_Instype') 'BillType',
    ui.insid 'undinsid',
    i.instype in ('Repo/Reverse','BuySellback') and ui.instype in('Bond','IndexLinkedBond','FRN') ? ui.insid : i.instype in ('Bond','IndexLinkedBond','FRN') ? i.insid :
    i.instype in ('Repo/Reverse','BuySellback') and ui.instype = 'Bill' ?
    days_between(@Calc_Day{Today},ui.exp_day ,'Act/365' ) < 92 ? 'ZAR/TB/0_91day' : 
    days_between(@Calc_Day{Today},ui.exp_day ,'Act/365' ) <183 ? 'ZAR/TB/92_182day' :
    days_between(@Calc_Day{Today},ui.exp_day ,'Act/365' ) <274 ? 'ZAR/TB/183_273day' : 
                                                                 'ZAR/TB/274_364day':
    
    days_between(@Calc_Day{Today},i.exp_day ,'Act/365' ) < 92 ? 'ZAR/TB/0_91day' : 
    days_between(@Calc_Day{Today},i.exp_day ,'Act/365' ) <183 ? 'ZAR/TB/92_182day' :
    days_between(@Calc_Day{Today},i.exp_day ,'Act/365' ) <274 ? 'ZAR/TB/183_273day' : 
                                                                'ZAR/TB/274_364day'  'Security',

    (i.instype in ('Repo/Reverse','BuySellback') and ui.instype in('Bond','IndexLinkedBond','FRN')) or i.instype in ('Bond','IndexLinkedBond','FRN') ? 0 :
    i.instype in ('Repo/Reverse','BuySellback') and ui.instype = 'Bill' ? 
        days_between(@Calc_Day{Today},ui.exp_day ,'Act/365' ) < 92 ? 91 : 
        days_between(@Calc_Day{Today},ui.exp_day ,'Act/365' ) <183 ? 182 :
        days_between(@Calc_Day{Today},ui.exp_day ,'Act/365' ) <274 ? 273 :           
                                                               364	:
                                                            
        days_between(@Calc_Day{Today},i.exp_day ,'Act/365' ) < 92 ? 91 : 
        days_between(@Calc_Day{Today},i.exp_day ,'Act/365' ) <183 ? 182 :
        days_between(@Calc_Day{Today},i.exp_day ,'Act/365' ) <274 ? 273 :           
                                                              364	'BillTermBucket',

    (i.instype in ('Repo/Reverse','BuySellback') and ui.instype in('Bond','IndexLinkedBond','FRN')) or i.instype in ('Bond','IndexLinkedBond','FRN') ? 0 :
    i.instype in ('Repo/Reverse','BuySellback') and ui.instype = 'Bill' ? 
    days_between(@Calc_Day{Today},ui.exp_day ,'Act/365' ):
    days_between(@Calc_Day{Today},i.exp_day ,'Act/365' ) 'RemainingBillTerm',
    sum(position(t,,,,@Calc_Day{Today},))          'Position',
    ui.instype 'und_insType'
    
into

    temp
  
from 
    instrument i,
    instrument ui,
    trade t,
    portfolio p
where
    t.insaddr = i.insaddr 
and ui.insaddr =* i.und_insaddr 
and	(i.instype in ('Bond','IndexLinkedBond','BuySellback','Repo/Reverse','FRN','Future/Forward') or (i.instype  = 'Bill' and add_info(t,'MM_Instype') in ('TB','LBB','SARB Debenture')) )  
and time_to_day(t.time) <= @Calc_Day{Today} 
and i.exp_day > @Calc_Day{Today} 
and t.status in ('BO Confirmed','BO-BO Confirmed','FO Confirmed')
and p.prfnbr = t.prfnbr
and p.prfid in ('9803AFS','9803AFS_Bills','9803Bond_Short','9803CARRIES','9803EQD_Funding','9803HFT','9803HTM')



/*Prices stored in LastPrice*/

select
    temp.trdnbr,
    temp.Calc_day,
    temp.Portfolio,
    temp.insid,
    temp.BillType ,
    'Yes'?temp.instype:'' 'Instype',
    temp.security,
    temp.BillTermBucket,
    temp.RemainingBillTerm,
    temp.Position,
    temp.BillType ~= 'SARB Debenture' ? price.bid : ((365/temp.BillTermBucket)*((1/(1-(price.bid*temp.BillTermBucket/36500)))-1))*100  'SARB20Yield',

    i.instype in ('Bond','IndexLinkedBond','BuySellback','Repo/Reverse','Future/Forward')   ? Dirty_from_yield(i, @Calc_Day{Today} ,,, price.bid ) : i.instype ='FRN' ? (present_value(i)/10000)/**.99*/ : 0.00 'BondAIP',

    temp.BillType in ('TB','LBB') ?
    (temp.Position *   price.bid                                                                             /100)*(temp.remainingBillTerm/365)       :
    (temp.Position *   (((365/temp.BillTermBucket)*((1/(1-(price.bid*temp.BillTermBucket/36500)))-1))*100)   /100)*(temp.remainingBillTerm/365)   'BillDiscount',
                
    i.instype in ('Bond','IndexLinkedBond','BuySellback','Repo/Reverse','Future/Forward') and i.und_instype ~= 'Bill'  ?           
    temp.Position * Dirty_from_yield(i, @Calc_Day{Today} ,,, price.bid ) / 100 : 
    temp.instype in ('Repo/Reverse','BuySellback') and temp.und_insType = 'Bill' ? 
    temp.Position - ((temp.Position * price.bid/100)*(temp.remainingBillTerm/365)) :
    i.instype ='FRN' ? 
    round((present_value(i) /10000),5)/100 /**.99*/ * temp.Position  : 
    temp.BillType in ('TB','LBB') ?  
    temp.Position - ((temp.Position * price.bid/100)*(temp.remainingBillTerm/365)) :
    temp.Position - (temp.Position *   (((365/temp.BillTermBucket)*((1/(1-(price.bid*temp.BillTermBucket/36500)))-1))*100)   /100)*(temp.remainingBillTerm/365)  'Value',
    
    temp.und_insType 'und_insType'

into 

    temp2

from 
    temp temp,
    instrument i,
    lastprice price,
    party par

where
    temp.security = i.insid 
and i.insaddr = price.insaddr 
and par.ptyid = 'SARB20'
and price.ptynbr = par.ptynbr
and price.day = @Calc_Day{Today} 




/*Prices stored in Price*/

