    temp.BillType ~= 'SARB Debenture' ? price.bid : ((365/temp.BillTermBucket)*((1/(1-(price.bid*temp.BillTermBucket/36500)))-1))*100  'SARB20Yield',

    i.instype in ('Bond','IndexLinkedBond','BuySellback','Repo/Reverse','Future/Forward')  ? Dirty_from_yield(i, @Calc_Day{Today} ,,, price.bid ) : i.instype ='FRN' ? present_value(i)/10000 /**.99*/ : 0.00 'BondAIP',
    temp.BillType in ('TB','LBB') ?
