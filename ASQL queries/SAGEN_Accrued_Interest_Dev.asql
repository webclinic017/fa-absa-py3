    and	t.value_day <= to_date(date_add_delta(d.today,1,0,0))
    and	i.exp_day >= to_date(date_add_delta(d.today,1,0,0))
    and	i.instype = 'Bill'
    and add_info(t,'Funding Instype') ~= 'FDI'
    AND display_id(t,'prfnbr') ~= 'MONB 0681'

