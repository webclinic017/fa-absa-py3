    ael_s(t,'get_discountcurve',i,'Receive')=' ' ? 'No Discount Curve Allocated' : ael_s(t,'get_discountcurve',i,'Receive')	 'DiscountCurveReceive',
    ''                                                      'StructuredPaymentType',
