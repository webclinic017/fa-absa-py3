    ''                                                      'Currency',
    ''                                                      'RealStartDate',
    ''                                                      'RealEndDate',
    0.0                                                     'CouponRate',
    ''                                                      'Daycount',
    0                                                       'cfwnbr',
    0.0                                                     'CurrentRateValue',
    ''                                                      'ResetDate',
    ''                                                      'CurveIndex',
    0.0                                                     'InsSpread',
    0.0                                                     'InsFactor',
    ''                                                      'Pay_Rec', 
    0.0                                                     'NominalScaling',
    to_string((i.instype = 'FRN') ? 'FRN' : i.instype)		'IType',

	to_string((i.instype = 'FRN' and add_info(t, 'MM_Instype') = 'NCC') ? 'NCC'
		: i.instype = 'FRN' ? 'FRN'
			: add_info(t, 'Funding Instype') ~= '' ? add_info(t, 'Funding Instype')
