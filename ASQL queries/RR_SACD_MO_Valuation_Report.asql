   /* : MemIns.InsType IN ('Swap','FRN') AND cf.start_day <= @ReportDate{Today} AND cf.end_day >= @ReportDate{Today}
            ? projected_cf(cf) * (t.quantity/i.index_factor) * used_price(cr,@ReportDate{},'ZAR') */
            : 0.00                                                                              'PVCF',

